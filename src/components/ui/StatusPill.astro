---
/**
 * StatusPill — Small indicator badge component.
 * PRD 002: Theme and Design Foundation
 *
 * Displays a colour-coded status pill for items like events.
 *
 * @example
 * <StatusPill status="active">Upcoming</StatusPill>
 * <StatusPill status="archived">Past</StatusPill>
 * <StatusPill>Default</StatusPill>
 */
interface Props {
  /** Visual state of the pill */
  status?: "default" | "active" | "archived";
  /** Additional CSS class names */
  class?: string;
}

const { status = "default", class: className = "" } = Astro.props;
---

<span class:list={["status-pill", `status-pill--${status}`, className]} role="status">
  <slot />
</span>

<style>
  .status-pill {
    display: inline-flex;
    align-items: center;
    gap: 0.375rem;
    padding: 0.2rem 0.75rem;
    font-family: var(--font-mono);
    font-size: var(--text-xs);
    font-weight: var(--weight-normal);
    letter-spacing: var(--tracking-wider);
    text-transform: uppercase;
    border-radius: var(--radius-full);
    line-height: var(--leading-tight);
    white-space: nowrap;
  }

  /* Dot indicator */
  .status-pill::before {
    content: "";
    width: 6px;
    height: 6px;
    border-radius: 50%;
    flex-shrink: 0;
  }

  /* Default — neutral grey */
  .status-pill--default {
    background: rgba(138, 148, 163, 0.15);
    color: var(--color-status-default);
  }
  .status-pill--default::before {
    background: var(--color-status-default);
  }

  /* Active — green */
  .status-pill--active {
    background: var(--color-chip-bg);
    color: var(--color-status-active);
  }
  .status-pill--active::before {
    background: var(--color-status-active);
    box-shadow: var(--shadow-glow-atmospheric);
  }

  /* Archived — subdued */
  .status-pill--archived {
    background: rgba(97, 97, 97, 0.15);
    color: var(--color-status-archived);
  }
  .status-pill--archived::before {
    background: var(--color-status-archived);
  }
</style>
