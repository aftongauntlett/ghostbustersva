---
/**
 * Site footer with franchise logos, nav links, and copyright.
 */
import { siteConfig } from "../config";
import MotionToggle from "./ui/MotionToggle.astro";

const [leftLogo, rightLogo] = siteConfig.footerLogos;
---

<footer class="site-footer">
  {/* Matching proton-stream divider from the header */}
  <div class="container">
    <div class="footer-divider" aria-hidden="true"></div>
  </div>
  <div class="container footer-inner">
    <div class="footer-grid">
      {
        leftLogo && (
          <div
            class="footer-logo footer-logo--left"
            role="group"
            aria-label="Partner and franchise logos"
          >
            <img src={leftLogo.src} alt={leftLogo.alt} width="100" height="auto" loading="lazy" />
          </div>
        )
      }

      <div class="footer-content">
        {/* Footer nav — condensed repeat of main nav */}
        <nav class="footer-nav" aria-label="Footer navigation">
          <ul>
            {
              siteConfig.nav.map((link, i) => (
                <li>
                  {i > 0 && (
                    <span class="nav-dot" aria-hidden="true">
                      ·
                    </span>
                  )}
                  <a
                    href={link.href}
                    {...("external" in link
                      ? { target: "_blank", rel: "noopener noreferrer" }
                      : {})}
                  >
                    {link.label}
                    {"external" in link && <span class="sr-only"> (opens in new tab)</span>}
                  </a>
                </li>
              ))
            }
          </ul>
        </nav>

        {/* Secondary links */}
        <nav class="footer-legal" aria-label="Legal links">
          <a href="/code-of-conduct">Code of Conduct</a>
        </nav>

        {/* Copyright */}
        <p class="copyright">{siteConfig.copyright}</p>

        {/* Motion toggle — PRD 009 */}
        <div class="footer-motion-toggle">
          <MotionToggle />
        </div>
      </div>

      {
        rightLogo && (
          <div
            class="footer-logo footer-logo--right"
            role="group"
            aria-label="Partner and franchise logos"
          >
            <img src={rightLogo.src} alt={rightLogo.alt} width="100" height="auto" loading="lazy" />
          </div>
        )
      }
    </div>
  </div>
</footer>

<style>
  .site-footer {
    background: transparent;
    border-top: none;
    margin-top: auto;
    padding-block: var(--space-2xl);
  }

  /* Proton-stream divider — matches header */
  .footer-divider {
    height: 2px;
    margin-bottom: var(--space-2xl);
    background: linear-gradient(
      90deg,
      transparent 0%,
      var(--color-glow) 20%,
      var(--color-divider-structural) 40%,
      var(--color-action-primary-hover) 50%,
      var(--color-divider-structural) 60%,
      var(--color-glow) 80%,
      transparent 100%
    );
    box-shadow:
      0 0 6px var(--color-glow),
      0 0 15px var(--color-glow-dim);
    border-radius: 1px;
  }

  .footer-inner {
    text-align: center;
  }

  .footer-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--space-lg);
    align-items: center;
  }

  .footer-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.6rem;
  }

  /* Side logos */
  .footer-logo {
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .footer-logo img {
    max-height: 60px;
    width: auto;
    object-fit: contain;
  }

  /* Footer nav */
  .footer-nav ul {
    list-style: none;
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    align-items: center;
    gap: var(--space-xs);
  }
  .footer-nav li {
    display: flex;
    align-items: center;
    gap: var(--space-xs);
  }
  .nav-dot {
    color: var(--color-text-muted);
    opacity: 0.4;
    font-size: 0.85rem;
    user-select: none;
  }
  .footer-nav a {
    font-family: var(--font-mono);
    font-size: var(--text-xs);
    text-decoration: none;
    text-transform: uppercase;
    letter-spacing: var(--tracking-wider);
    color: var(--color-text);
    transition: color 0.2s ease;
    padding: 0.15rem 0.35rem;
    border-radius: 2px;
  }
  .footer-nav a:hover,
  .footer-nav a:focus-visible {
    color: var(--color-link);
  }

  /* Secondary legal links */
  .footer-legal {
    display: flex;
    gap: var(--space-lg);
    justify-content: center;
  }
  .footer-legal a {
    font-size: var(--text-xs);
    text-decoration: none;
    color: var(--color-text-muted);
    transition: color 0.2s ease;
  }
  .footer-legal a:hover,
  .footer-legal a:focus-visible {
    color: var(--color-link);
  }

  /* Copyright */
  .copyright {
    font-size: 0.7rem;
    color: var(--color-text-muted);
    opacity: 0.7;
  }

  /* Legal disclaimer */
  .disclaimer {
    font-size: 0.7rem;
    color: var(--color-text-muted);
    opacity: 0.65;
    max-width: 34rem;
    line-height: 1.5;
  }

  /* Motion toggle — centred beneath copyright */
  .footer-motion-toggle {
    display: flex;
    justify-content: center;
    margin-top: var(--space-xs);
  }

  @media (min-width: 768px) {
    .footer-grid {
      grid-template-columns: auto minmax(0, 1fr) auto;
      gap: var(--space-xl);
    }

    .footer-logo--left {
      justify-content: flex-start;
    }

    .footer-logo--right {
      justify-content: flex-end;
    }
  }
</style>
