---
/**
 * Site footer with franchise logos, nav links, and copyright.
 */
import { siteConfig } from "../config";

const [leftLogo, rightLogo] = siteConfig.footerLogos;
---

<footer class="site-footer">
  <div class="container footer-inner">
    <div class="footer-grid">
      {
        leftLogo && (
          <div
            class="footer-logo footer-logo--left"
            role="group"
            aria-label="Partner and franchise logos"
          >
            <img src={leftLogo.src} alt={leftLogo.alt} width="100" height="auto" loading="lazy" />
          </div>
        )
      }

      <div class="footer-content">
        {/* Footer nav â€” condensed repeat of main nav */}
        <nav class="footer-nav" aria-label="Footer navigation">
          <ul>
            {
              siteConfig.nav.map((link) => (
                <li>
                  <a
                    href={link.href}
                    {...("external" in link
                      ? { target: "_blank", rel: "noopener noreferrer" }
                      : {})}
                  >
                    {link.label}
                    {"external" in link && <span class="sr-only"> (opens in new tab)</span>}
                  </a>
                </li>
              ))
            }
          </ul>
        </nav>

        {/* Copyright */}
        <p class="copyright">{siteConfig.copyright}</p>

        {/* Legal disclaimer */}
        <p class="disclaimer">
          Ghostbusters Virginia is a nonprofit fan group and is not affiliated with or endorsed by
          Sony Pictures. Ghostbusters and related marks are trademarks of Sony Pictures.
        </p>
      </div>

      {
        rightLogo && (
          <div
            class="footer-logo footer-logo--right"
            role="group"
            aria-label="Partner and franchise logos"
          >
            <img src={rightLogo.src} alt={rightLogo.alt} width="100" height="auto" loading="lazy" />
          </div>
        )
      }
    </div>
  </div>
</footer>

<style>
  .site-footer {
    background: var(--color-surface);
    border-top: 2px solid var(--color-accent);
    margin-top: auto;
    padding-block: 2rem;
  }

  .footer-inner {
    text-align: center;
  }

  .footer-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1rem;
    align-items: center;
  }

  .footer-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.75rem;
  }

  /* Side logos */
  .footer-logo {
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .footer-logo img {
    max-height: 60px;
    width: auto;
    object-fit: contain;
  }

  /* Footer nav */
  .footer-nav ul {
    list-style: none;
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 1rem;
  }
  .footer-nav a {
    font-size: 0.85rem;
    text-decoration: none;
    color: var(--color-text-muted);
  }
  .footer-nav a:hover,
  .footer-nav a:focus-visible {
    color: var(--color-accent-hover);
  }

  /* Copyright */
  .copyright {
    font-size: 0.8rem;
    color: var(--color-text-muted);
  }

  /* Legal disclaimer */
  .disclaimer {
    font-size: 0.7rem;
    color: var(--color-text-muted);
    opacity: 0.65;
    max-width: 34rem;
    line-height: 1.5;
  }

  @media (min-width: 768px) {
    .footer-grid {
      grid-template-columns: auto minmax(0, 1fr) auto;
      gap: 1.5rem;
    }

    .footer-logo--left {
      justify-content: flex-start;
    }

    .footer-logo--right {
      justify-content: flex-end;
    }
  }

  /* Screen-reader only utility */
  .sr-only {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    border: 0;
  }
</style>
