---
/**
 * Contact page — How to reach us.
 * PRD 007: Join, Contact & Donate Pages Redesign
 */
import BaseLayout from "../layouts/BaseLayout.astro";
import Panel from "../components/ui/Panel.astro";
import Button from "../components/ui/Button.astro";
---

<BaseLayout title="Contact">
  <section class="container page" aria-labelledby="contact-title">
    <h1 id="contact-title" class="page-title">Contact Us</h1>

    <p class="intro">
      Have a question, want to book us for an event, or just want to say hi? Reach out via the info
      below or connect with us on social media.
    </p>

    <Panel heading="Contact Info">
      <dl class="contact-list">
        <div class="contact-item">
          <dt>Email</dt>
          <dd><code class="mono">info@ghostbustersva.com</code></dd>
        </div>
        <div class="contact-item">
          <dt>Facebook</dt>
          <dd>
            <a
              href="https://www.facebook.com/GhostbustersVA"
              target="_blank"
              rel="noopener noreferrer"
            >
              <code class="mono">facebook.com/GhostbustersVA</code>
              <span class="sr-only"> (opens in new tab)</span>
            </a>
          </dd>
        </div>
      </dl>
    </Panel>

    <Panel heading="Book Us for Your Event">
      <p class="book-us-text">
        Do you have a company function, parade, event opening, charity event, or just looking to
        bring the supernatural fun to a party? Don't wait another minute and contact your Paranormal
        Professionals — <strong>Ghostbusters, Virginia</strong>.
      </p>
      <p class="book-us-text">
        Our friendly professional team is the only 501(c)(3) non-profit Ghostbusters charity group
        serving you in:
      </p>
      <ul class="service-areas" role="list">
        <li>Northern Virginia</li>
        <li>Fredericksburg</li>
        <li>Richmond</li>
        <li>Charlottesville</li>
        <li>Virginia Beach</li>
      </ul>
    </Panel>

    <div class="standalone-cta">
      <strong class="cta-callout">You know who to call!</strong>
      <span class="cta-aside">(or, in this case, email!)</span>
    </div>

    <div class="page-cta-row">
      <Button variant="primary" href="https://www.facebook.com/GhostbustersVA" external>
        Contact Us on Facebook
      </Button>
      <Button variant="secondary" href="mailto:info@ghostbustersva.com"> Email Us </Button>
    </div>

    <footer class="page-footnote">
      <p>
        * A full contact form is coming soon. For now, please email us directly or reach out on
        Facebook.
      </p>
    </footer>
  </section>
</BaseLayout>

<style>
  .page {
    padding-block: var(--text-3xl);
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .page-title {
    font-family: var(--font-heading);
    font-size: var(--text-4xl);
    font-weight: var(--weight-bold);
    letter-spacing: var(--tracking-wider);
    color: var(--color-accent-hover);
    text-align: center;
    line-height: var(--leading-tight);
  }

  .intro {
    color: var(--color-text-muted);
    font-family: var(--font-body);
    font-size: var(--text-base);
    line-height: var(--leading-normal);
    text-align: center;
  }

  /* ── Panel sizing ── */
  .page :global(.panel) {
    width: 100%;
  }

  /* ── Contact info list ── */
  .contact-list {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .contact-item {
    display: flex;
    align-items: baseline;
    gap: 0.75rem;
  }

  .contact-item dt {
    font-family: var(--font-body);
    font-size: var(--text-sm);
    font-weight: var(--weight-semibold);
    color: var(--color-text);
    text-transform: uppercase;
    letter-spacing: var(--tracking-wider);
    min-width: 5.5rem;
  }

  .contact-item dd {
    margin: 0;
  }

  .mono {
    font-family: var(--font-mono);
    font-size: var(--text-sm);
    color: var(--color-accent-hover);
    background: none;
    padding: 0;
  }

  .contact-item a {
    text-decoration: none;
  }

  .contact-item a:hover .mono,
  .contact-item a:focus-visible .mono {
    color: var(--color-text);
    text-shadow: 0 0 8px var(--color-glow);
  }

  .page-cta-row {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 1.25rem;
    width: 100%;
  }

  /* ── Book Us panel ── */
  .book-us-text {
    color: var(--color-text-muted);
    font-family: var(--font-body);
    font-size: var(--text-base);
    line-height: var(--leading-normal);
    margin-bottom: 0.75rem;
  }

  .book-us-text strong {
    color: var(--color-text);
  }

  /* ── Standalone CTA callout ── */
  .standalone-cta {
    text-align: center;
    width: 100%;
  }

  .cta-callout {
    font-family: var(--font-heading);
    font-size: var(--text-2xl);
    color: var(--color-accent);
    letter-spacing: var(--tracking-wider);
    text-shadow: 0 0 12px var(--color-glow);
  }

  .cta-aside {
    display: block;
    font-size: var(--text-sm);
    color: var(--color-text-muted);
    font-style: italic;
    margin-top: 0.25rem;
  }

  .service-areas {
    list-style: none;
    padding: 0;
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem 1.25rem;
    justify-content: center;
    margin-bottom: 1rem;
  }

  .service-areas li {
    color: var(--color-text-muted);
    font-family: var(--font-body);
    font-size: var(--text-sm);
    padding-left: 1.25rem;
    position: relative;
  }

  .service-areas li::before {
    content: "";
    position: absolute;
    left: 0;
    top: 0.5em;
    width: 6px;
    height: 6px;
    border-radius: var(--radius-full);
    background: var(--color-accent);
    box-shadow: var(--shadow-glow);
  }

  /* ── Footnote ── */
  .page-footnote {
    margin-top: auto;
    padding-top: 1.5rem;
    border-top: 1px solid var(--color-border, rgba(255, 255, 255, 0.08));
    width: 100%;
  }

  .page-footnote p {
    font-family: var(--font-body);
    font-size: var(--text-xs);
    color: var(--color-text-muted);
    text-align: center;
    font-style: italic;
  }

  .sr-only {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    border: 0;
  }

  @media (max-width: 640px) {
    .page-title {
      font-size: var(--text-2xl);
    }

    .contact-item {
      flex-direction: column;
      gap: 0.25rem;
    }
  }
</style>
