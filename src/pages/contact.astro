---
/**
 * Contact page — How to reach us.
 * PRD 007: Join, Contact & Donate Pages Redesign
 */
import BaseLayout from "../layouts/BaseLayout.astro";
import Panel from "../components/ui/Panel.astro";
import Button from "../components/ui/Button.astro";
---

<BaseLayout title="Contact">
  <section class="container page" aria-labelledby="contact-title">
    <h1 id="contact-title" class="page-title">Contact Us</h1>

    <p class="intro">
      Have a question, want to book us for an event, or just want to say hi? Reach out via the info
      below or connect with us on social media.
    </p>

    <Panel heading="Contact Info">
      <dl class="contact-list">
        <div class="contact-item">
          <dt>Email</dt>
          <dd><code class="mono">info@ghostbustersva.com</code></dd>
        </div>
        <div class="contact-item">
          <dt>Facebook</dt>
          <dd>
            <a
              href="https://www.facebook.com/GhostbustersVA"
              target="_blank"
              rel="noopener noreferrer"
            >
              <code class="mono">facebook.com/GhostbustersVA</code>
              <span class="sr-only"> (opens in new tab)</span>
            </a>
          </dd>
        </div>
      </dl>
      <div class="cta-row">
        <Button variant="primary" href="https://www.facebook.com/GhostbustersVA" external>
          Message Us on Facebook
        </Button>
      </div>
    </Panel>

    <p class="coming-soon">
      A full contact form will be added in a future update. For now, please email us directly or
      reach out on Facebook.
    </p>
  </section>
</BaseLayout>

<style>
  .page {
    padding-block: var(--text-3xl);
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .page-title {
    font-family: var(--font-heading);
    font-size: var(--text-4xl);
    font-weight: var(--weight-bold);
    letter-spacing: var(--tracking-wider);
    color: var(--color-accent-hover);
    text-align: center;
    line-height: var(--leading-tight);
  }

  .intro {
    color: var(--color-text-muted);
    font-family: var(--font-body);
    font-size: var(--text-base);
    line-height: var(--leading-normal);
    max-width: 55rem;
    margin-inline: auto;
    text-align: center;
  }

  /* ── Panel sizing ── */
  .page :global(.panel) {
    max-width: 40rem;
    margin-inline: auto;
    width: 100%;
  }

  /* ── Contact info list ── */
  .contact-list {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .contact-item {
    display: flex;
    align-items: baseline;
    gap: 0.75rem;
  }

  .contact-item dt {
    font-family: var(--font-body);
    font-size: var(--text-sm);
    font-weight: var(--weight-semibold);
    color: var(--color-text);
    text-transform: uppercase;
    letter-spacing: var(--tracking-wider);
    min-width: 5.5rem;
  }

  .contact-item dd {
    margin: 0;
  }

  .mono {
    font-family: var(--font-mono);
    font-size: var(--text-sm);
    color: var(--color-accent-hover);
    background: none;
    padding: 0;
  }

  .contact-item a {
    text-decoration: none;
  }

  .contact-item a:hover .mono,
  .contact-item a:focus-visible .mono {
    color: var(--color-text);
    text-shadow: 0 0 8px var(--color-glow);
  }

  .cta-row {
    margin-top: 1.25rem;
  }

  /* ── Coming soon note ── */
  .coming-soon {
    font-family: var(--font-body);
    font-size: var(--text-sm);
    color: var(--color-text-muted);
    text-align: center;
    font-style: italic;
    max-width: 55rem;
    margin-inline: auto;
  }

  .sr-only {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    border: 0;
  }

  @media (max-width: 640px) {
    .page-title {
      font-size: var(--text-2xl);
    }

    .contact-item {
      flex-direction: column;
      gap: 0.25rem;
    }
  }
</style>
